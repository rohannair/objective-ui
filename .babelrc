{
  "presets": [
    "react",
    ["env", {
      "targets": {
        "browsers": ["last 2 versions", "safari >= 7"]
      },
      "loose": true
    }],
    "stage-2"
  ],
  "plugins": [
    "transform-regenerator",
    "transform-object-rest-spread",
    "transform-class-properties",
    "babel-plugin-lodash"
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "presets": [
        "react-optimize"
      ],
      "plugins": [
        "transform-remove-console"
      ]
    }
  }
}
